    <!-- Mobile Nav -->
    <nav class="mobile-nav">
        <button class="bottom-nav-item active" onclick="mobileNav('dashboard', this)"><i data-lucide="layout-dashboard" class="w-6 h-6"></i><span class="text-[10px]">Home</span></button>
        <button class="bottom-nav-item" onclick="mobileNav('live-tables', this)"><i data-lucide="monitor-play" class="w-6 h-6"></i><span class="text-[10px]">Tables</span></button>
        <button class="bottom-nav-item" onclick="mobileNav('analytics', this)"><i data-lucide="bar-chart-2" class="w-6 h-6"></i><span class="text-[10px]">Stats</span></button>
        <button class="bottom-nav-item" onclick="mobileNav('automation', this)"><i data-lucide="cpu" class="w-6 h-6"></i><span class="text-[10px]">Bots</span></button>
        <button class="bottom-nav-item" onclick="toggleSidebar()"><i data-lucide="menu" class="w-6 h-6"></i><span class="text-[10px]">Menu</span></button>
    </nav>

    <script>
        // Initialize
        lucide.createIcons();
        
        // Loading
        window.addEventListener('load', () => {
            setTimeout(() => {
                document.getElementById('loader')?.classList.add('hidden');
                initCharts();
                loadAllData();
            }, 1500);
        });
        
        // Navigation
        function navigateTo(page, element) {
            document.querySelectorAll('.nav-item').forEach(i => i.classList.remove('active'));
            if (element) element.classList.add('active');
            document.querySelectorAll('.page-section').forEach(s => s.classList.remove('active'));
            document.getElementById('page-' + page)?.classList.add('active');
            document.getElementById('page-title').textContent = page.replace(/-/g, ' ').replace(/\b\w/g, l => l.toUpperCase());
            if (window.innerWidth < 1024) document.getElementById('sidebar').classList.remove('mobile-open');
        }
        
        function mobileNav(page, element) {
            document.querySelectorAll('.bottom-nav-item').forEach(i => i.classList.remove('active'));
            element.classList.add('active');
            navigateTo(page, null);
        }
        
        function toggleSidebar() {
            document.getElementById('sidebar').classList.toggle('mobile-open');
        }
        
        // Toggle switch
        function toggleSwitch(el) {
            el.classList.toggle('active');
            showToast(el.classList.contains('active') ? 'Enabled' : 'Disabled');
        }
        
        // Toast
        function showToast(msg) {
            const container = document.getElementById('toast-container');
            const toast = document.createElement('div');
            toast.className = 'toast';
            toast.innerHTML = `<i data-lucide="info" class="w-5 h-5 text-pink-400"></i><span>${msg}</span>`;
            container.appendChild(toast);
            lucide.createIcons();
            setTimeout(() => toast.classList.add('show'), 10);
            setTimeout(() => { toast.classList.remove('show'); setTimeout(() => toast.remove(), 300); }, 3000);
        }
        
        // Modal
        function openModal(title, content) {
            document.getElementById('modal-title').textContent = title;
            document.getElementById('modal-body').innerHTML = content;
            document.getElementById('modal').classList.add('active');
            lucide.createIcons();
        }
        
        function closeModal(e) {
            if (!e || e.target.id === 'modal') document.getElementById('modal').classList.remove('active');
        }
        
        function openQuickAction() {
            openModal('Quick Actions', `
                <div class="grid gap-3">
                    <button class="p-4 rounded-xl bg-white/5 hover:bg-white/10 text-left" onclick="showToast('Creating table...'); closeModal()">
                        <div class="font-medium">Create New Table</div>
                        <div class="text-sm text-gray-400">Start a new poker table</div>
                    </button>
                    <button class="p-4 rounded-xl bg-white/5 hover:bg-white/10 text-left" onclick="showToast('Deploying AI...'); closeModal()">
                        <div class="font-medium">Deploy AI Bot</div>
                        <div class="text-sm text-gray-400">Add AI player to table</div>
                    </button>
                    <button class="p-4 rounded-xl bg-white/5 hover:bg-white/10 text-left" onclick="showToast('Opening tournament...'); closeModal()">
                        <div class="font-medium">Schedule Tournament</div>
                        <div class="text-sm text-gray-400">Create MTT event</div>
                    </button>
                </div>
            `);
        }
        
        // Charts
        function initCharts() {
            const ctx1 = document.getElementById('mainChart');
            if (ctx1) {
                new Chart(ctx1, {
                    type: 'line',
                    data: {
                        labels: ['00:00', '04:00', '08:00', '12:00', '16:00', '20:00', '23:59'],
                        datasets: [{
                            label: 'Revenue',
                            data: [12000, 19000, 15000, 25000, 22000, 30000, 28000],
                            borderColor: '#ff0080',
                            backgroundColor: 'rgba(255, 0, 128, 0.1)',
                            fill: true,
                            tension: 0.4
                        }]
                    },
                    options: {
                        responsive: true,
                        maintainAspectRatio: false,
                        plugins: { legend: { display: false } },
                        scales: {
                            x: { grid: { color: 'rgba(255,255,255,0.05)' }, ticks: { color: '#94a3b8' } },
                            y: { grid: { color: 'rgba(255,255,255,0.05)' }, ticks: { color: '#94a3b8' } }
                        }
                    }
                });
            }
            
            const ctx2 = document.getElementById('hourlyChart');
            if (ctx2) {
                new Chart(ctx2, {
                    type: 'bar',
                    data: {
                        labels: Array.from({length: 24}, (_, i) => i + ':00'),
                        datasets: [{
                            label: 'Players',
                            data: [800, 600, 400, 300, 250, 400, 800, 1500, 2200, 2800, 3200, 3400, 3600, 3500, 3400, 3600, 3800, 4000, 4200, 4500, 4800, 4200, 3200, 1500],
                            backgroundColor: 'rgba(0, 212, 255, 0.5)',
                            borderRadius: 4
                        }]
                    },
                    options: {
                        responsive: true,
                        maintainAspectRatio: false,
                        plugins: { legend: { display: false } },
                        scales: {
                            x: { grid: { display: false }, ticks: { color: '#94a3b8', maxTicksLimit: 8 } },
                            y: { grid: { color: 'rgba(255,255,255,0.05)' }, ticks: { color: '#94a3b8' } }
                        }
                    }
                });
            }
            
            const ctx3 = document.getElementById('winLossChart');
            if (ctx3) {
                new Chart(ctx3, {
                    type: 'doughnut',
                    data: {
                        labels: ['Won', 'Lost', 'Broke Even'],
                        datasets: [{
                            data: [45, 42, 13],
                            backgroundColor: ['#10b981', '#ef4444', '#f59e0b'],
                            borderWidth: 0
                        }]
                    },
                    options: {
                        responsive: true,
                        maintainAspectRatio: false,
                        plugins: { legend: { position: 'right', labels: { color: '#94a3b8' } } }
                    }
                });
            }
        }
        
        // Load all demo data
        function loadAllData() {
            // Tables list
            const tables = [
                { name: 'High Stakes NLH #1', game: 'NLH', stakes: '$500/$1K', players: '5/6', avgPot: '$12.4K', status: 'live' },
                { name: 'Omaha Crushers', game: 'PLO', stakes: '$200/$400', players: '4/6', avgPot: '$8.2K', status: 'active' },
                { name: 'Micro Stakes', game: 'NLH', stakes: '$0.50/$1', players: '8/9', avgPot: '$45', status: 'active' },
                { name: 'Heads Up Arena', game: 'NLH', stakes: '$1K/$2K', players: '2/2', avgPot: '$15K', status: 'full' },
                { name: 'Weekend Special', game: 'NLH', stakes: '$50/$100', players: '7/9', avgPot: '$2.1K', status: 'active' },
                { name: 'PLO Madness', game: 'PLO', stakes: '$100/$200', players: '5/6', avgPot: '$5.8K', status: 'active' }
            ];
            
            const tableList = document.getElementById('table-list');
            if (tableList) {
                tableList.innerHTML = tables.map(t => `
                    <div class="p-4 rounded-xl bg-black/20 border border-white/5 hover:border-pink-500/30 cursor-pointer transition-all" onclick="viewTable('${t.name}')">
                        <div class="flex justify-between items-start mb-2">
                            <div>
                                <div class="font-medium">${t.name}</div>
                                <div class="text-xs text-gray-400">${t.game} • ${t.stakes}</div>
                            </div>
                            <span class="px-2 py-1 rounded text-xs ${t.status === 'live' ? 'bg-red-500/20 text-red-400 animate-pulse' : t.status === 'full' ? 'bg-orange-500/20 text-orange-400' : 'bg-green-500/20 text-green-400'}">
                                ${t.status === 'live' ? '● LIVE' : t.status === 'full' ? 'FULL' : 'Active'}
                            </span>
                        </div>
                        <div class="flex justify-between text-sm">
                            <span class="text-gray-400">${t.players} players</span>
                            <span class="text-yellow-400">Avg pot: ${t.avgPot}</span>
                        </div>
                    </div>
                `).join('');
            }
            
            // Clubs list
            const clubs = [
                { name: 'Shark Tank', members: 234, rating: 4.9, volume: '$120K/week', status: 'active' },
                { name: 'Poker Sharks', members: 189, rating: 4.7, volume: '$85K/week', status: 'active' },
                { name: 'High Rollers Club', members: 56, rating: 5.0, volume: '$450K/week', status: 'vip' },
                { name: 'Weekend Warriors', members: 445, rating: 4.3, volume: '$45K/week', status: 'review' }
            ];
            
            const clubsList = document.getElementById('clubs-list');
            if (clubsList) {
                clubsList.innerHTML = clubs.map(c => `
                    <div class="p-4 rounded-xl bg-black/20 border border-white/5 hover:border-pink-500/30 cursor-pointer transition-all" onclick="showClubDetails('${c.name}')">
                        <div class="flex justify-between items-start mb-2">
                            <div>
                                <div class="font-medium">${c.name}</div>
                                <div class="text-xs text-gray-400">${c.members} members</div>
                            </div>
                            <div class="flex items-center gap-1 text-yellow-400 text-sm">
                                <i data-lucide="star" class="w-3 h-3 fill-current"></i>
                                <span>${c.rating}</span>
                            </div>
                        </div>
                        <div class="flex justify-between text-sm">
                            <span class="${c.status === 'vip' ? 'text-pink-400' : c.status === 'review' ? 'text-yellow-400' : 'text-green-400'}">
                                ${c.status === 'vip' ? '★ VIP' : c.status === 'review' ? '⚠ Review' : '● Active'}
                            </span>
                            <span class="text-gray-400">${c.volume}</span>
                        </div>
                    </div>
                `).join('');
                lucide.createIcons();
            }
            
            // Transactions
            const txs = [
                { id: 'TX-8842', user: 'Player8823', type: 'deposit', amount: 5000, method: 'BTC', status: 'completed', time: '2m ago' },
                { id: 'TX-8841', user: 'AlicePoker', type: 'withdrawal', amount: 12000, method: 'USDT', status: 'pending', time: '5m ago' },
                { id: 'TX-8840', user: 'HighRoller99', type: 'deposit', amount: 50000, method: 'Bank', status: 'processing', time: '12m ago' },
                { id: 'TX-8839', user: 'WeekendWarrior', type: 'withdrawal', amount: 2500, method: 'BTC', status: 'completed', time: '18m ago' }
            ];
            
            const txList = document.getElementById('transaction-list');
            if (txList) {
                txList.innerHTML = txs.map(tx => `
                    <tr>
                        <td class="font-mono text-xs">${tx.id}</td>
                        <td>${tx.user}</td>
                        <td><span class="text-${tx.type === 'deposit' ? 'green' : 'red'}-400 capitalize">${tx.type}</span></td>
                        <td class="font-medium">$${tx.amount.toLocaleString()}</td>
                        <td>${tx.method}</td>
                        <td><span class="badge badge-${tx.status === 'completed' ? 'online' : tx.status === 'pending' ? 'warning' : 'offline'} text-xs">${tx.status}</span></td>
                        <td class="text-gray-400 text-xs">${tx.time}</td>
                        <td><button class="text-pink-400 hover:underline text-xs" onclick="showToast('Viewing ${tx.id}')">View</button></td>
                    </tr>
                `).join('');
            }
            
            // Bot profiles
            const profiles = document.getElementById('bot-profiles');
            if (profiles) {
                // Already set in HTML, but could be dynamic
            }
            
            // Active sessions
            const sessions = document.getElementById('active-sessions');
            if (sessions) {
                const sessionData = [
                    { name: 'AlphaBot-01', table: 'High Stakes #1', status: 'thinking', time: '2h 14m' },
                    { name: 'BetaAI-03', table: 'Omaha Crushers', status: 'acting', time: '45m' },
                    { name: 'GammaBot-07', table: 'Micro Stakes', status: 'waiting', time: '1h 30m' },
                    { name: 'DeltaAI-12', table: 'Heads Up', status: 'thinking', time: '3h 20m' }
                ];
                
                sessions.innerHTML = sessionData.map(s => `
                    <div class="p-3 rounded-lg bg-black/20 flex justify-between items-center">
                        <div>
                            <div class="font-medium text-sm">${s.name}</div>
                            <div class="text-xs text-gray-400">${s.table} • ${s.time}</div>
                        </div>
                        <div class="flex items-center gap-2">
                            <span class="text-xs ${s.status === 'acting' ? 'text-green-400 animate-pulse' : s.status === 'thinking' ? 'text-yellow-400' : 'text-gray-400'}">
                                ${s.status === 'acting' ? '● Acting' : s.status === 'thinking' ? '○ Thinking' : '○ Waiting'}
                            </span>
                            <button class="p-1 hover:bg-white/10 rounded" onclick="showToast('Stopping ${s.name}...')">
                                <i data-lucide="square" class="w-3 h-3 text-red-400"></i>
                            </button>
                        </div>
                    </div>
                `).join('');
                lucide.createIcons();
            }
            
            // Heatmap
            const heatmap = document.getElementById('heatmap-container');
            if (heatmap) {
                const days = ['Mon', 'Tue', 'Wed', 'Thu', 'Fri', 'Sat', 'Sun'];
                const colors = ['bg-blue-900', 'bg-blue-700', 'bg-blue-500', 'bg-cyan-400', 'bg-yellow-400', 'bg-orange-400', 'bg-red-500'];
                
                heatmap.innerHTML = days.map(day => `
                    <div class="flex items-center gap-1">
                        <div class="w-16 text-xs text-gray-400">${day}</div>
                        <div class="flex-1 grid grid-cols-24 gap-1">
                            ${Array.from({length: 24}, () => {
                                const intensity = Math.floor(Math.random() * 7);
                                return `<div class="heatmap-cell ${colors[intensity]}" title="${Math.floor(Math.random() * 500)} players"></div>`;
                            }).join('')}
                        </div>
                    </div>
                `).join('');
            }
        }
        
        // Interactive functions
        function filterTables(type, btn) {
            document.querySelectorAll('#page-live-tables .tab-btn').forEach(b => b.classList.remove('active'));
            btn.classList.add('active');
            showToast(`Filtered by: ${type}`);
        }
        
        function viewTable(name) {
            showToast(`Opening ${name}...`);
        }
        
        function createNewTable() {
            openModal('Create New Table', `
                <form class="space-y-4" onsubmit="event.preventDefault(); showToast('Table created!'); closeModal();">
                    <input type="text" class="input-field" placeholder="Table Name" required>
                    <div class="grid grid-cols-2 gap-4">
                        <select class="input-field">
                            <option>Texas Hold'em</option>
                            <option>Omaha</option>
                            <option>Stud</option>
                        </select>
                        <select class="input-field">
                            <option>6 Players</option>
                            <option>9 Players</option>
                            <option>10 Players</option>
                        </select>
                    </div>
                    <div class="grid grid-cols-2 gap-4">
                        <input type="number" class="input-field" placeholder="Small Blind" required>
                        <input type="number" class="input-field" placeholder="Big Blind" required>
                    </div>
                    <button type="submit" class="btn-primary w-full py-3">Create Table</button>
                </form>
            `);
        }
        
        function toggleChat() {
            showToast('Chat panel toggled');
        }
        
        function pauseTable() {
            showToast('Table paused');
        }
        
        function closeTable() {
            if (confirm('Are you sure you want to close this table?')) {
                showToast('Table closed');
            }
        }
        
        function sendChat(e) {
            if (e.key === 'Enter') sendChatButton();
        }
        
        function sendChatButton() {
            const input = document.getElementById('chat-input');
            if (input && input.value.trim()) {
                const container = document.getElementById('chat-messages');
                const msg = document.createElement('div');
                msg.className = 'chat-message chat-own';
                msg.innerHTML = `<span class="font-bold text-xs text-gray-400">You:</span> ${input.value}`;
                container.appendChild(msg);
                container.scrollTop = container.scrollHeight;
                input.value = '';
                
                // Auto-reply
                setTimeout(() => {
                    const reply = document.createElement('div');
                    reply.className = 'chat-message chat-other';
                    reply.innerHTML = `<span class="font-bold text-xs text-gray-400">Dealer:</span> Message received`;
                    container.appendChild(reply);
                    container.scrollTop = container.scrollHeight;
                }, 1000);
            }
        }
        
        function switchAnalyticsTab(tab, btn) {
            document.querySelectorAll('#page-analytics .tab-btn').forEach(b => b.classList.remove('active'));
            btn.classList.add('active');
            document.querySelectorAll('.analytics-tab-content').forEach(c => c.classList.add('hidden'));
            document.getElementById('analytics-' + tab)?.classList.remove('hidden');
        }
        
        function createClub() {
            openModal('Create New Club', `
                <form class="space-y-4" onsubmit="event.preventDefault(); showToast('Club created!'); closeModal();">
                    <input type="text" class="input-field" placeholder="Club Name" required>
                    <textarea class="input-field" placeholder="Description" rows="3"></textarea>
                    <select class="input-field">
                        <option>Public</option>
                        <option>Private</option>
                        <option>Invite Only</option>
                    </select>
                    <button type="submit" class="btn-primary w-full py-3">Create Club</button>
                </form>
            `);
        }
        
